/**
 * User Dashboard Component
 * 
 * Displays a list of polls created by the authenticated user.
 * Provides navigation for creating new polls or managing existing ones.
 * 
 * Why: Gives users a central view of their activity within the app.
 */

"use client"

import { useEffect, useState } from "react"
import { supabase } from "@/lib/supabaseClient"

export default function Dashboard() {
  const [polls, setPolls] = useState<any[]>([])

  useEffect(() => {
    async function fetchPolls() {
      // Fetch polls created by the current user
      const { data, error } = await supabase.from("polls").select("*")
      if (!error) setPolls(data || [])
    }
    fetchPolls()
  }, [])

  return (
    <div className="p-4">
      <h2 className="text-xl font-bold">My Polls</h2>
      {polls.length === 0 ? (
        <p>No polls yet. Create one!</p>
      ) : (
        <ul>
          {polls.map((poll) => (
            <li key={poll.id} className="py-2 border-b">
              {poll.title}
            </li>
          ))}
        </ul>
      )}
    </div>
  )
}

